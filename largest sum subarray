```
#include<bits/stdc++.h>
void main()
{
vector<int> a;
int n;
cout<<"enter the size of the vector"<<endl;
cin>>n;
cout<<"entre the array elemeents"<<endl;
for(int i=0;i<n;i++)
{
cin>>a[i];
}
int sum_now=0;
int sum_till_yet=INT_MIN;
for(i=0;i<n;i++)
{
sum_now = sum_now + a[i];

if(sum_till_yet < sum_now)
sum_till_yet = sum_now;

if(sum_now <0)
sum_now=0;
}

cout<<"the highest sum = "<<sum_till_yet<<endl;
}

```




