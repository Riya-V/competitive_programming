problem link: https://www.codechef.com/DEC19B/problems/PLMU

```cpp
#include<iostream>
#include<bits/stdc++.h>

using namespace std;

int main()

{
    int t,n,c=0,d,k;
    vector<int> a ;
    cin>>t;

    while(t--)
    {    c=0;
    d=0;
    vector<int> a;
        cin>>n;

        for(int i=0;i<n;i++)
        {
            cin >> k;
            a.push_back(k);
        }
//mergeSort(a, 0, n - 1);



        for(int i=0;i<n;i++)
        {
          if(a[i]==2)
          c++;
          if(a[i]==0)
          d++;



        }
   int x = (c*(c-1)/2)+(d*(d-1)/2);

        cout<<x<<endl;

    }

    return 0;
}
```
